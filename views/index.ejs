<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login Page</title>
</head>

<body>

    <div class="container">
        <h1 class="mt-5 mb-5 text-center text-primary text-dark"><b>Welcome!</b></h1>

        <div class="row mt-5">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <% if(session.user_id) { %>
                    <% session.username %>
                        <h1>Hi user, Welcome</h1>
                        <a href="/article" class="btn btn-primary bg-secondary border-secondary ">Go to main page</a>
                        <% } else { %>

                            <div class="card">
                                <div class="card-header">Login</div>
                                <div class="card-body">
                                    <form method="post" action="/login">
                                        <div class="mb-3">
                                            <label>Email Address</label>
                                            <input type="email" name="user_email_address" class="form-control" />
                                        </div>
                                        <div class="mb-3">
                                            <label>Password</label>
                                            <input type="password" name="user_password" class="form-control" />
                                        </div>
                                        <div class="mb-3">
                                            <input type="submit" class="btn btn-primary bg-secondary border-secondary"
                                                value="Login" />
                                            <a href="/create"
                                                class="btn btn-primary bg-secondary border-secondary">Create Account</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>
</body>

</html>